@model Library.Models.BorrowModel.BorrowModel
<style>


    .button {
        background-color: #900C3F;
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        font-size: 16px;
        margin: 4px 2px;
        opacity: 0.6;
        transition: 0.3s;
        display: inline-block;
        text-decoration: none;
        cursor: pointer;
    }

        .button:hover {
            opacity: 1
        }
</style>

<div class="container">
    <div class="card-header clearfix detailHeading">
        <h2>Place Hold Item</h2>

    </div>
</div>

<div class="jumbotron" style="background-color:#f6eeee">
    <div class="row">
        <div class="col-md-3">
            <div>
                <p id="itemTitle">@Model.Title</p>
                <img class="detailImage" src="@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-md-9">
            <p>There are currently @Model.HoldCount holds in the queue for this item.</p>
            @using (Html.BeginForm("PlaceHold", "Collection", FormMethod.Post))
            {
                @Html.HiddenFor(i => i.ItemId)
                <div>
                    Please insert a Library Subscription ID
                    @Html.TextBoxFor(i => i.LibrarySubscriptionId)
                </div>
                <div>
                    <button type="submit" class="mdl-button mdl-button--colored button">Hold</button>
                </div>
            }
        </div>
    </div>
</div>