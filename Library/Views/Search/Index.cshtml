@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model Library.Models.Collection.ItemSearchViewModel
<form asp-controller="Search" asp-action="Index" method="get">
    <div class="form-row">
        <div class="col-10">
            <input type="search" class="input-search-box" name="SearchTerm" value="@Model.SearchTerm" />
        </div>
        <div class="col-2">
            <input type="submit" value="@Localizer["Search"]" />
        </div>
    </div>
</form>